iterator.chunks = |iterable, n|
  iter = iterable.iter()
  keep_going = true
  while keep_going
    yield iter.copy().take n
    keep_going = iter.skip(n - 1).next() != ()


@tests =
  @test chunks: ||
    x = (0..10).chunks 3
    assert_eq x.next().to_tuple(), (0, 1, 2)
    assert_eq x.next().to_tuple(), (3, 4, 5)
    assert_eq x.next().to_tuple(), (6, 7, 8)
    assert_eq x.next().to_tuple(), (9,)
